<%= form_tag store_index_path(params.except(:controller, :action)), :method => :get do %>
  <h4>FILTER</h4>

  <h5 class="height-filler">Brend</h5>
  <select class="selectpicker slect" name="brand">
    <option value="">Svi brendovi</option>
    <% Brand.all.each do |b| %>
    <option value="<%=b.id%>"><%=b.name%></option>
    <%end%>
  </select>

  <h5 class="height-filler">Velicina</h5>
  <select class="selectpicker slect" name="size">
    <option value="">Sve velicine</option>
    <% @sizes.each do |s| %>
    <option value="<%=s%>"><%=s%></option>
    <% end %>
  </select>

  <h5 class="height-filler">Boja</h5>
  <select class="selectpicker slect" name="color">
    <option value="">Sve boje</option>
    <% Color.all.each do |c| %>
    <option value="<%=c.id%>" style="background-color:<%=c.hex%>"><%=c.name%>
    </option>
    <%end%>
  </select>

  <h5 class="height-filler">Cijena</h5>
  <select class="selectpicker slect" name="pricerange">
    <option value="">Sve cijene</option>
    <option value="30-60"> 30 - 60 <option>
    <option value="60-90"> 60 - 90 <option>
    <option value="90-120"> 90 - 120 <option>
    <option value="120-1000"> 120 -  <option>
  </select>
  <input type="hidden" name="category" value="<%= params[:category]%>"/>
  <%= submit_tag "Filtriraj" ,class: "btn btn-default", name: nil%>
<% end %>
