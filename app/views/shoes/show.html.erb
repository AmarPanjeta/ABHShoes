<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Naziv proizvoda:
            <small><%=@shoe.name%></small>
        </h1>
    </div>
</div>
<div class="row vdivide">

    <div class="col-md-7">
        <img class="img-responsive" src="<%=@shoe.imgurl%>" alt="">
    </div>

    <div class="col-md-4">
        <h3>Opis proizvoda</h3>
        <p><%=@shoe.description%></p>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label>Kolicina:</label>
              <input type="text" class="form-control">
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label>Velicina:</label>
              <select name="cars" class="form-control">
              </select>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label>Cijena:</label>
              <h4><%=@shoe.price%></h4>
            </div>
          </div>
        </div>
        <div class="button-style">
          <button class="btn">Dodaj u korpu</button>
          <button class="btn btn-alert">Kupi odmah</button>
        </div>
    </div>
</div>


