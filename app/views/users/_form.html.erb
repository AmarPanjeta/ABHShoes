<%= form_for :user,url: users_path do |f| %>
<div class="login-form">
<div class="form-group">
  <%= f.label :username, "Korisnicko ime"%><br>
  <%= f.text_field :username,class: "form-control", value: @username%>
</div>

<div class="form-group">
  <%= f.label :email%><br>
  <%= f.text_field :email, class:"form-control", value: @email%>
</div>

<div class="form-group">
  <%= f.label :name,"Ime" %><br>
  <%= f.text_field :name, class:"form-control", value: @name%>
</div>

<div class="form-group">
  <%= f.label :surname, "Prezime"%><br>
  <%= f.text_field :surname, class:"form-control", value: @surname%>
</div>

<div class="form-group">
  <%= f.label :password, "Sifra"%><br>
  <%= f.password_field :password, class:"form-control"%>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, "Potvrda sifre"%><br>
  <%= f.password_field :password_confirmation, class:"form-control"%>
</div>
</div>
<%= f.submit "Kreiraj nalog",class: "btn right-align btn-dark-grey" %>
<% end %>
