<h1> Lista korisnika </h1>

<div class="col-sm-3">
<table class="table table-striped table-bordered">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Name</th>
    <th>Last name</th>
  </tr>

  <% @users.each do |user| %>
    <tr <% if user.admin %> class="danger"<%end%>>
      <td><%=user.username%></td>
      <td><%=user.email%></td>
      <td><%=user.name%></td>
      <td><%=user.surname%></td>
    </tr>
  <% end %>
</div>
