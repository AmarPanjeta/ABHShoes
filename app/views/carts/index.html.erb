
<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Vasa korpa
                <small>Sadrzaj</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
<div class="col-md-8">
    <% @cart.line_items.each do |li| %>
    <div class="row">
        <div class="col-md-7">
            <a href="#">
                <img class="img-responsive" src="<%=li.shoe.imgurl%>" alt="">
            </a>
        </div>
        <div class="col-md-5">
            <h3><%=li.shoe.name%></h3>
            <h4>Kategorija: ---</h4>
            <p>Opis: <%=li.shoe.description %></p>
            <p>Cijena:<strong> <%= li.shoe.price %> KM</strong></p>
            <div class="row">
            <a class="btn btn-default floated" href="#">Detaljnije <span class="glyphicon glyphicon-chevron-right"></span></a>
            <%= button_to line_item_path(li),class: "btn btn-default floated" ,method: :delete do %>
              Obrisi <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </div>
        </div>
    </div>

    <hr>
    <% end %>
</div>
