
<!-- Page Content -->
<div class="container">


<div class="col-md-8">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Vasa korpa
                <small>Sadrzaj</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
<div class="col-md-8">
    <% @cart.line_items.each do |li| %>
    <div class="row">
        <div class="col-md-7">
            <a href="#">
                <img class="img-responsive" src="<%=li.shoe.imgurl%>" alt="">
            </a>
        </div>
        <div class="col-md-5">
            <h3><%=li.shoe.name%></h3>
            <h4>Kategorija: ---</h4>
            <p>Opis: <%=li.shoe.description %></p>
            <p>Cijena:<strong> <%= li.shoe.price %> KM</strong></p>
            <div class="row">
            <a class="btn btn-default floated" href="#">Detaljnije <span class="glyphicon glyphicon-chevron-right"></span></a>
            <%= button_to line_item_path(li),class: "btn btn-default floated" ,method: :delete do %>
              Obrisi <span class="glyphicon glyphicon-remove"></span>
            <% @price=@price+li.shoe.price %>
            <% end %>
          </div>
        </div>
    </div>

    <hr>
    <% end %>
</div>
</div>

<!-- Cart payment box -->

<% if @quantity!=0 %>
<div class="col-md-4">
  <div class="cart-payment">
    <h4>Korpa</h4>
    <div class="payment-box">
      <strong> Cijena </strong>
      <p>Narudzba: <%=@price %></p>
      <p>Isporuka: 30.0</p>
      <p>Ukupno <%=@price+30.00%></p>
    </div>
  </div>
</div>
<form action="/payments" method="POST" class="right-align">
  <script
    src="https://checkout.stripe.com/checkout.js"
    class="stripe-button"
    data-label="Placanje karticom"
    data-key="pk_test_w2y76hBfXyXxh6eGExFiMgVm"
    data-image="https://pbs.twimg.com/profile_images/570193155421503488/brZaisEE_reasonably_small.png"
    data-name="Demo Site"
    data-description="Broj cipela: <%=@quantity%>"
    data-amount="<%=@price * 100 + 3000%>">
  </script>
</form>
<%end%>

<!-- Notification message script -->

<% if !flash[:success].nil? %>
<script>
toastr.options.positionClass = 'toast-bottom-full-width';
toastr.options.extendedTimeOut = 0; //1000;
toastr.options.timeOut = 1000;
toastr.options.fadeOut = 250;
toastr.options.fadeIn = 250;
toastr.success('Uspjesno ste kupili artikle!')
</script>
<%end%>
</div>
