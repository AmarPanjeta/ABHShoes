
<!-- Page Content -->
<div class="container">


<div class="col-md-8">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><small>Podaci o dostavi</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
<div class="col-md-8">
<div class="payment-info-box">
  <strong><%=@name%> <%=@surname%></strong>
  <strong><%=@address%></strong>
  <strong><%=@city%></strong>
  <strong><%=@country%></strong>
</div>
</div>
</div>

<!-- Cart payment box -->

<% if @quantity!=0 %>
<div class="col-md-4">
  <div class="cart-payment">
    <div class="k-p-d">
      <div class="row">
      <div class="col-md-4 korpa" >KORPA</div>
      <div class="col-md-4 dostava2">DOSTAVA</div>
      <div class="col-md-4 placanje2">PLACANJE</div>
      </div>
    </div>
    <div class="payment-box">
      <strong> Cijena </strong>
      <p>Narudzba: <%=@price %></p>
      <p>Isporuka: 30.0</p>
      <p>Ukupno <%=@price+30.00%></p>
    </div>
  </div>



<form action="/payments" method="POST" class="right-align">
  <script
    src="https://checkout.stripe.com/checkout.js"
    class="stripe-button"
    data-label="Placanje karticom"
    data-key="pk_test_w2y76hBfXyXxh6eGExFiMgVm"
    data-image="https://pbs.twimg.com/profile_images/570193155421503488/brZaisEE_reasonably_small.png"
    data-name="Demo Site"
    data-description="Broj cipela: <%=@quantity%>"
    data-amount="<%=@price * 100 + 3000%>">
  </script>
</form>
<button type="button" name="button" class="btn btn-default right-align">Odustani</button>
</div>
<%end%>

<!-- Notification message script -->

<% if !flash[:success].nil? %>
<script>
toastr.options.positionClass = 'toast-bottom-full-width';
toastr.options.extendedTimeOut = 0; //1000;
toastr.options.timeOut = 1000;
toastr.options.fadeOut = 250;
toastr.options.fadeIn = 250;
toastr.success('Uspjesno ste kupili artikle!')
</script>
<%end%>
</div>
